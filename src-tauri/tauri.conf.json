{
  "$schema": "https://schema.tauri.app/config/2",
  "productName": "KubeUI",
  "version": "0.1.0",
  "identifier": "com.xyser.kubeui",
  "build": {
    "beforeDevCommand": "pnpm dev",
    "devUrl": "http://localhost:1420",
    "beforeBuildCommand": "pnpm build",
    "frontendDist": "../dist"
  },
  "app": {
    "windows": [
      {
        "label": "main",
        "title": "KubeUI",
        "width": 800,
        "height": 600,
        "visible": false
      },
      {
        "label": "splashscreen",
        "width": 400,
        "height": 200,
        "resizable": false,
        "transparent": true,
        "decorations": false,
        "shadow": false,
        "alwaysOnTop": true,
        "url": "splashscreen.html"
      }
    ],
    "security": {
      "csp": null
    }
  },
  "bundle": {
    "active": true,
    "createUpdaterArtifacts": true,
    "targets": "all",
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/icon.icns",
      "icons/icon.ico"
    ]
  },
  "plugins": {
    "updater": {
      "pubkey": "dW50cnVzdGVkIGNvbW1lbnQ6IG1pbmlzaWduIHB1YmxpYyBrZXk6IEEyRjhBNjU4NzA0QThFODYKUldTR2prcHdXS2I0b2wvakZmMFMyeXBZWE1jR0dtTExLT1VVVis2WDFCMG8yanNQY3RtcExJNkgK",
      "endpoints": [
        "https://kubeui.xyser.com/{{target}}/{{arch}}/{{current_version}}",
        "https://github.com/dingdayu/kubeui/releases/latest/download/latest.json"
      ]
    },
    "deep-link": {
      "mobile": [
        { "host": "kubeui.xyser.com", "pathPrefix": ["/open"] }
      ],
      "desktop": {
        "schemes": ["kubeui"]
      }
    }
  }
}
